{
  "$schema": "./node_modules/@angular/service-worker/config/schema.json",
  "index": "/index.html",
  "assetGroups": [
    {
      "name": "app",
      "installMode": "prefetch",
      "updateMode": "prefetch",
      "resources": {
        "files": [
          "/index.html",
          "/*.css",
          "/*.js"
        ]
      }
    },
    {
      "name": "assets",
      "installMode": "lazy",
      "updateMode": "lazy",
      "resources": {
        "files": [
          "/assets/**",
          "/*.(svg|cur|jpg|jpeg|png|apng|webp|avif|gif|otf|ttf|woff|woff2)"
        ]
      }
    }
  ],
  "dataGroups": [
    {
      "name": "api",
      "urls": [
        "http://localhost:3000/api/**"
      ],
      "cacheConfig": {
        "strategy": "freshness",
        "maxSize": 100,
        "maxAge": "1m",
        "timeout": "10s"
      }
    }
  ],
  "navigationUrls": [
    { "positive": true, "regex": "^\\/.*"},
    { "positive": false, "regex": "^\\/(?:.+\\/)*[^/]*\\.[^/]*$" },
    { "positive": false, "regex": "^\\/(?:.+\\/)*[^/]*__[^/]*$" },
    { "positive": false, "regex": "^\\/(?:.+\\/)*[^/]*_/" }
  ],
  "navigationRequestStrategy": "freshness"
}